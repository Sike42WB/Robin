{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Docker: Python (Compose) UP ",
            "type": "docker",
            "request": "launch",
            "platform": "python",
            "python": {
                "file": ["${workspaceFolder}/robin-web-app/app/main.py"]
            },
            "preLaunchTask": "docker-compose: up"
        },
        {
            "name": "Docker: Python (Compose) DOWN ",
            "type": "docker",
            "request": "launch",
            "platform": "python",
            "preLaunchTask": "docker-compose: down"
    }
  ]
}